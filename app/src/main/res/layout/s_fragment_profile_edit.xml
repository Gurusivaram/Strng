<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_profile_edit_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_profile_edit"
        style="@style/ToolBar"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_toolbar_profile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title_profile_name"
                style="@style/ToolBarText"
                android:layout_width="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="0dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/elon_musk"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_active_status_offline"
                app:layout_constraintEnd_toStartOf="@+id/ib_menu"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ib_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_active_status"
                android:layout_width="@dimen/spacing_12"
                android:layout_height="@dimen/spacing_12"
                android:background="@drawable/bg_active_status"
                android:elevation="@dimen/spacing_4"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_active_status_offline"
                app:layout_constraintEnd_toStartOf="@+id/tv_active_status_offline"
                app:layout_constraintTop_toTopOf="@+id/tv_active_status_offline" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_active_status_offline"
                style="@style/ToolBarText"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:text="@string/offline"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_title_profile_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/tv_title_profile_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_profile_name" />

            <ImageButton
                android:id="@+id/ib_menu"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_menu" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:id="@+id/sv_profile_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_profile_edit">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_sv_profile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_profile_images"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_about_header"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_profile_element_header"
                android:elevation="4dp"
                android:text="@string/about"
                android:textColor="@color/appColor"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_profile_images" />

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/bg_profile_element"
                android:elevation="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Fast learner"
                android:textColor="@color/black2"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_about_header" />

            <ImageButton
                android:id="@+id/ib_edit_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_icons_20"
                android:elevation="@dimen/spacing_6"
                android:padding="5dp"
                android:translationX="-50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_about"
                app:layout_constraintStart_toEndOf="@+id/tv_about"
                app:layout_constraintTop_toTopOf="@+id/tv_about"
                app:srcCompat="@drawable/ic_edit" />

            <TextView
                android:id="@+id/tv_phone_header"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_profile_element_header"
                android:elevation="4dp"
                android:text="@string/phone"
                android:textColor="@color/appColor"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_about" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/lightGrey"
                android:elevation="4dp"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="20dp"
                android:paddingTop="5dp"
                android:paddingEnd="20dp"
                android:paddingBottom="15dp"
                android:text="+1 987654321"
                android:textColor="@color/black2"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone_header" />

            <ImageButton
                android:id="@+id/ib_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_icons_20"
                android:elevation="@dimen/spacing_6"
                android:padding="5dp"
                android:translationX="-50dp"
                app:layout_constraintBottom_toBottomOf="@+id/ib_video"
                app:layout_constraintEnd_toStartOf="@+id/ib_video"
                app:layout_constraintTop_toTopOf="@+id/ib_video"
                app:srcCompat="@drawable/ic_phone" />


            <ImageButton
                android:id="@+id/ib_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_icons_20"
                android:elevation="@dimen/spacing_6"
                android:padding="5dp"
                android:translationX="-50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_phone"
                app:layout_constraintStart_toEndOf="@+id/tv_phone"
                app:layout_constraintTop_toTopOf="@+id/tv_phone"
                app:srcCompat="@drawable/ic_videocam" />

            <TextView
                android:id="@+id/tv_email_header"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/lightGrey"
                android:elevation="4dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:text="@string/email"
                android:textColor="@color/appColor"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_profile_element"
                android:elevation="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="elonmush@tesla.com"
                android:textColor="@color/black2"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_header" />

            <ImageButton
                android:id="@+id/ib_edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="@drawable/bg_icons_20"
                android:elevation="@dimen/spacing_6"
                android:padding="5dp"
                android:translationX="-50dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_email"
                app:layout_constraintStart_toEndOf="@+id/tv_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_header"
                app:srcCompat="@drawable/ic_edit" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>