<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">@dimen/spacing_4</item>
        <item name="android:background">@color/appColor</item>
    </style>

    <style name="ToolBarText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:layout_marginTop">@dimen/spacing_20</item>
        <item name="android:layout_marginBottom">@dimen/spacing_20</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appText1</item>
        <item name="android:letterSpacing">@dimen/text_spacing</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="TextInput" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:paddingTop">@dimen/spacing_8</item>
        <item name="android:paddingStart">@dimen/spacing_15</item>
        <item name="android:paddingEnd">@dimen/spacing_15</item>
        <item name="android:paddingBottom">@dimen/spacing_10</item>
    </style>

    <style name="ProfileImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28%</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/appColorStatusBar</item>
        <item name="colorAccent">@color/appText1</item>
    </style>
</resources>